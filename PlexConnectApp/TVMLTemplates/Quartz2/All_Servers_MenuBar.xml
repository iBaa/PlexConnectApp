<document>
  <menuBarTemplate>
    <menuBar>
      <menuItem id="Search"
        onSelect="Presenter.loadMenuContent('Search_All', '', '')">
        <title>{{TEXT(Search All)}}</title>
      </menuItem>
      {{PMSLOOP(owned)}}{{
      {{SET(noItems:false)}}
      <menuItem id="{{PMSVAL(clientIdentifier)}}"
        onSelect="myPlex.switchServer(event);"
        onSuccess="Presenter.loadMenuContent('All_Servers_Shelves','{{PMSID()}}','');"
        >
        <title><![CDATA[{{PMSVAL(name)}}]]></title>
      </menuItem>
      }}
      {{PMSLOOP(shared)}}{{
      {{SET(noItems:false)}}
      <menuItem id="{{PMSVAL(clientIdentifier)}}"
        onSelect="myPlex.switchServer(event);"
        onSuccess="Presenter.loadMenuContent('All_Servers_Shelves','{{PMSID()}}','');"
        >
        <title><![CDATA[{{PMSVAL(name)}}]]></title>
      </menuItem>
      }}
    </menuBar>
  </menuBarTemplate>
</document>
