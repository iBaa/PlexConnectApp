{{CUT({{GET(noItems)}})}}{{
{{SET(noItems:true)}}
{{XML()}}{{
<document>
  <listTemplate>
    <banner>
        <title><![CDATA[{{VAL(MediaContainer/title2)}}]]></title>
    </banner>
    <list>
      <relatedContent>
         <lockup>
           <img src="{{IMAGEURL(MediaContainer/thumb::768)}}" />
           <title><![CDATA[{{VAL(MediaContainer/parentTitle)}}]]></title>
           <description><![CDATA[{{VAL(MediaContainer/summary)}}]]></description>
         </lockup>
       </relatedContent>

      <section>
{{COPY(MediaContainer/Directory)}}{{
{{SET(noItems:false)}}
        <listItemLockup
            onSelect="Presenter.load('TVShow_EpisodeList', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
            onSelectHold="modal"
            >
            <img src="{{IMAGEURL(thumb::384)}}" width="100" height="150" />
            <title><![CDATA[{{VAL(title)}}]]></title>
            <subtitle>{{VAL(leafCount)}} {{TEXT(Episodes)}}</subtitle>
        </listItemLockup>
}}
      </section>
      
    </list>
  </listTemplate>
</document>
}}
}}

{{IF({{GET(noItems)}})}}{{  <!--enable if no items added-->
<document>
  <alertTemplate>
    <title>TITLE</title>
    <description>{{TEXT(Plex Media Server: No Items Available)}}</description>
  </alertTemplate>
</document>
}}
