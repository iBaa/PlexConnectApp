{{CUT({{GET(noItems)}})}}{{
{{SET(noItems:true)}}
{{XML()}}{{
<document>
  <listTemplate>

<!-- album list -->
{{CUT({{GET(noAlbums)}})}}{{
{{SET(noAlbums:true)}}
    <banner>
      <title><![CDATA[{{VAL(MediaContainer/title2)}}]]></title>
    </banner>
    <list>

      <section>
{{COPY(MediaContainer/Directory)}}{{
{{IF({{CHK("{{VAL(type:)}}"=="album")}})}}{{
{{SET(noItems:false)}}
{{SET(noAlbums:false)}}
        <listItemLockup
            onSelect="Presenter.load('Music_TrackList', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
            onPlay="audioPlayer.play('{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
            onSelectHold="modal"
            >
          <title><![CDATA[{{VAL(title)}}]]></title>
          <relatedContent>
            <lockup>
              <img src="{{IMAGEURL(thumb::768)}}" />
            </lockup>
          </relatedContent>
        </listItemLockup>
}}
}}
      </section>
    </list>
}}

<!-- generic directoy -->
{{IF({{GET(noItems)}})}}{{
    <banner>
      <title><![CDATA[{{VAL(MediaContainer/title1)}}]]></title>
    </banner>
    <list>

      <section>
{{COPY(MediaContainer/Directory)}}{{
{{SET(noItems:false)}}
        <listItemLockup
            onSelect="Presenter.load('Music_Directory', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
            onSelectHold="modal"
            >
          <title><![CDATA[{{VAL(title)}}]]></title>
          <relatedContent>
            <lockup>
              <img src="{{IMAGEURL(thumb::768)}}" />
            </lockup>
          </relatedContent>
        </listItemLockup>
}}
      </section>
    </list>
}}
  </listTemplate>
</document>
}}
}}

{{IF({{GET(noItems)}})}}{{  <!--enable if no items added-->
<document>
  <alertTemplate>
    <title>TITLE</title>
    <description>{{TEXT(Plex Media Server: No Items Available)}}</description>
  </alertTemplate>
</document>
}}
