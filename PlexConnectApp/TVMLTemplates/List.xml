{{CUT({{GET(noItems)}})}}{{
{{SET(noItems:true)}}
{{XML()}}{{
<document>
  <listTemplate>
    <list>
      <!--
      <relatedContent>
        <itemBanner>
          <heroImg src="" />
        </itemBanner>
      </relatedContent>
      -->
      <header>
        <title>{{VAL(MediaContainer/title1)}}</title>
      </header>

      <section>
{{COPY(MediaContainer/Directory)}}{{
{{SET(noItems:false)}}
        <listItemLockup
            onSelectURL="{{URL(List:{{VAL(key)}})}}" onSelectPresenter="select"
            onPlayURL="{{URL(List:{{VAL(key)}})}}" onPlayPresenter="select"
            onSelectHoldURL="" onSelectHoldPresenter="modal"
            >
            <title><![CDATA[{{VAL(title)}}]]></title>
        </listItemLockup>
}}
{{COPY(MediaContainer/Video)}}{{
{{SET(noItems:false)}}
        <listItemLockup
            onSelectURL="{{URL(Movie_PrePlay:{{VAL(key)}})}}" onSelectPresenter="select"
            onPlayURL="{{URL(PlayVideo:{{VAL(key)}})}}" onPlayPresenter="video"
            resume_onSelectURL="{{URL(PlayResume:{{VAL(key)}})}}" resume_onSelectPresenter="modal"
            >
          <title><![CDATA[{{VAL(title)}}]]></title>
        </listItemLockup>
}}

      </section>
      
    </list>
  </listTemplate>
</document>
}}
}}

{{IF({{GET(noItems)}})}}{{  <!--enable if no items added-->
<document>
  <alertTemplate>
    <title>TITLE</title>
    <description>{{TEXT(Plex Media Server: No Items Available)}}</description>
  </alertTemplate>
</document>
}}