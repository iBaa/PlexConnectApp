{{XML()}}
{{
<document>
	<head>
        <style>
				  	.lightBackgroundColor {
				  	background-color: rgb(239, 236, 230);
				  	}
				  	.darkBackgroundColor {
				  	background-color: rgb(51, 51, 51);
				  	}
            .layout {
            margin: 40;
            }
            .showTextOnHighlight {
            tv-text-highlight-style: marquee-on-highlight;
            }
            .roundedImageCorners {
            itml-img-treatment: corner-small;
            }

        </style>
    </head>
  	<catalogTemplate theme="">
    	<banner>
            <title><![CDATA[{{VAL(MediaContainer/title1)}}]]></title>
        </banner>
      <list>
        <section>
        	<header>
          	<title><![CDATA[{{VAL(MediaContainer/title2)}}]]></title>
          </header>
    		{{COPY(MediaContainer/Directory)}}{{
					<listItemLockup>
          	<title><![CDATA[{{VAL(title)}}]]></title>
      	{{XML({{VAL(key)}})}}{{
            <decorationLabel><![CDATA[{{VAL(MediaContainer/size)}}]]></decorationLabel>
    			  <relatedContent>
            	<grid>
              <section>
				{{COPY(MediaContainer/Directory)}}{{
        {{IF({{CHK("{{VAL(type)}}"!="artist")}})}}{{
        				<lockup onSelect="Presenter.loadTitle('Music_Albums', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}', 'Music')"
                onPlay="audioPlayer.play('{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
                onSelectHold="ScrobbleMenu">
      						<img src="{{IMAGEURL(thumb::360)}}" height="308" width="308" />
                	<title class="whiteText"><![CDATA[{{VAL(title)}}]]></title>
                </lockup>
        }}
        {{IF({{CHK("{{VAL(type)}}"=="artist")}})}}{{
        				<lockup onSelect="Presenter.loadTitle('Music_Artist', '{{PMSID()}}', '/library/metadata/{{VAL(ratingKey)}}', 'Music')"
                onSelectHold="ScrobbleMenu">
      						<img style="tv-img-treatment: corner-medium" src="{{IMAGEURL(thumb::360)}}" height="308" width="308" />
                	<title style="tv-text-highlight-style: marquee-on-highlight"><![CDATA[{{VAL(title)}}]]></title>
                </lockup>
        }}
        }}
        			</section>
              </grid>
            </relatedContent>
        }}
        	</listItemLockup>
    }}
        </section>
      </list>
    </catalogTemplate>
</document>
}}
