{{XML()}}{{
<document>
  <head>
      <style>
        .lightBackgroundColor {
        background-color: rgb(239, 236, 230);
        }
        .darkBackgroundColor {
        background-color: rgb(51, 51, 51);
        }
      </style>
  </head>
  <alertTemplate theme="light">
    <title><![CDATA[{{VAL(MediaContainer/Video/title)}}]]></title>
    <description><![CDATA[{{VAL(MediaContainer/Video/grandparentTitle)}}]]></description>

    <button
        onSelect="Presenter.load('TVShow_SeasonGrid', '{{PMSID()}}', '{{PATH({{VAL(MediaContainer/Video/grandparentKey)}}/children)}}'); Presenter.closeContext();"
        >
      <text>{{TEXT(View Show)}}</text>
    </button>

{{SET(showMarkWatched:false)}}  <!--default-->
{{SET(showMarkUnwatched:false)}}
{{IF({{VAL(MediaContainer/Video/viewOffset:0)}})}}{{  <!--offset>0 - watching has been started - as in onDeck -->
  {{SET(showMarkWatched:true)}}
  {{SET(showMarkUnwatched:true)}}
}}
{{IF({{VAL(MediaContainer/Video/viewCount:0)}})}}{{  <!--count>0 - allow mark unwatched-->
  {{SET(showMarkUnwatched:true)}}
}}
{{IF(!{{VAL(MediaContainer/Video/viewCount:0)}})}}{{  <!--count==0 - allow mark watched-->
  {{SET(showMarkWatched:true)}}
}}
{{IF({{GET(showMarkWatched)}})}}{{
    <button
        onSelect="swiftInterface.sendPmsPath('{{PMSID()}}', '/:/scrobble?key={{VAL(MediaContainer/Video/ratingKey)}}&amp;identifier=com.plexapp.plugins.library'); Presenter.closeContext(); Presenter.loadAndSwap('TVShow_OnDeck', '{{PMSID()}}', '{{PATH()}}');"
        >
      <text>{{TEXT(Mark as Watched)}}</text>
    </button>
}}
{{IF({{GET(showMarkUnwatched)}})}}{{
    <button
        onSelect="swiftInterface.sendPmsPath('{{PMSID()}}', '/:/unscrobble?key={{VAL(MediaContainer/Video/ratingKey)}}&amp;identifier=com.plexapp.plugins.library'); Presenter.closeContext(); Presenter.loadAndSwap('TVShow_OnDeck', '{{PMSID()}}', '{{PATH()}}');"
        >
      <text>{{TEXT(Mark as Unwatched)}}</text>
    </button>
}}

    <!--mark change artwork-->

  </alertTemplate>
</document>
}}
