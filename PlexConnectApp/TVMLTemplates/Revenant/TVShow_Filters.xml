<?xml version="1.0" encoding="UTF-8" ?>
{{CUT({{GET(noItems)}})}}{{
{{SET(noItems:true)}}
{{XML()}}
{{
<document>
    <head>
        <style>
            .darkBackgroundColor {
            background-color: #1f1f1f;
            }
        </style>
    </head>
    <alertTemplate theme="light">
    <title>Filters:</title>

	{{COPY(MediaContainer/Directory)}}
	{{
		{{IF({{VAL(prompt)}})}}
		{{
		
        	{{SET(noItems:false)}}  <!--within COPY this sets the var to false-->    
        	<button onSelect="Presenter.load('Search', '{{PMSID()}}', '{{PATH()}}/{{VAL(key)}}');Presenter.closeContext()">
        	  	<text>{{VAL(title)}}</text>
        	</button>
    	}}
    	{{IF(!{{VAL(prompt)}})}}
		{{
    	{{IF({{CHK("{{VAL(key:)}}"=="folder")}})}}
		{{
		
        	{{SET(noItems:false)}}  <!--within COPY this sets the var to false-->    
        	<button onSelect="Presenter.close();Presenter.load('List', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}');Presenter.closeContext()">
            	<text>{{VAL(title)}}</text>
        	</button>
    	}}
    	{{IF(!{{CHK("{{VAL(key:)}}"=="folder")}})}}
		{{
    		{{IF({{CHK("{{VAL(secondary:)}}"=="1")}})}}
			{{
		
        	{{SET(noItems:false)}}  <!--within COPY this sets the var to false-->    
        	<button onSelect="Presenter.load('TVShow_Secondary', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}');Presenter.closeContext()">
            	<text>{{VAL(title)}}</text>
        	</button>
    		}}
    		{{IF(!{{CHK("{{VAL(secondary:)}}"=="1")}})}}
			{{
		
        	{{SET(noItems:false)}}  <!--within COPY this sets the var to false-->    
        	<button onSelect="Presenter.close();Presenter.load('TVShow_Grid', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}');Presenter.closeContext()">
            	<text>{{VAL(title)}}</text>
        	</button>
    		}}
    	}}
    	}}
    }}    
}}        
    </alertTemplate>
</document>
}}

{{IF({{GET(noItems)}})}}{{  <!--enable if no items added-->
<document>
  <alertTemplate>
    <title>TITLE</title>
    <description>{{TEXT(Plex Media Server: No Items Available)}}</description>
  </alertTemplate>
</document>
}}