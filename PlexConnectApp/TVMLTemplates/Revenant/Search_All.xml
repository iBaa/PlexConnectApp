<?xml version="1.0" encoding="UTF-8" ?>
<document>
  <head>
    <style>
      .spacing {
      margin: 0 0 90 0;
      }
      .pullAheadVsSectionSpacing {
      margin: 0 -40;
      }
      .rounded {
      itml-img-treatment: corner-medium;
      }
      .lightBackgroundColor {
      background-color: rgb(239, 236, 230);
      }
      .darkBackgroundColor {
      background-color: rgb(51, 51, 51);
      }
    </style>
  </head>
  <searchTemplate onLoad="Search.onLoad(event)" theme="light" class="lightBackgroundColor">
    <!-- search -->
    <searchField
    view="Search_All"
    pmsId=""
    pmsPath="/search?query={0}"
    />
    <!-- results -->
    <collectionList id="searchResults" class="pullAheadVsSectionSpacing">

      <!-- movies -->
      {{CUT({{GET(noMovies)}})}}{{
      {{SET(noMovies:true)}}
      <shelf class="spacing">
        <header>
          <title>{{TEXT(Movies)}}</title>
        </header>
        {{PMSLOOP(all)}}{{
        {{XML()}}{{
        {{SET(noItems:true)}}
        {{CUT({{GET(noItems)}})}}{{
        <section>
          <header>
          </header>
          {{COPY(MediaContainer/Video)}}{{
          {{IF({{CHK("{{VAL(type:)}}"=="movie")}})}}{{
          {{SET(noMovies:false)}}
          {{SET(noItems:false)}}  <!-- this PMS -->
          {{IF({{VAL(viewOffset)}})}}{{
          <lockup onSelect="Presenter.load('Movie_PrePlay', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
            onPlay="Presenter.loadContext('Videos_ResumePopUp', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
            onHoldSelect="Presenter.loadContext('Movie_MorePopUp', '{{PMSID()}}', '{{VAL(ratingKey)}}')">
            <img src="{{IMAGE_T(thumb::360)}}" height="375" width="250" />
            <overlay>
              <img style="tv-position: top-right; margin: -36 -30 120 120" src="{{RESOURCEURL(TVMLTemplates/Revenant/images/flags:watching:png)}}"  width="72" height="72" />
            </overlay>
            <title class="showTextOnHighlight"><![CDATA[{{VAL(title)}}]]></title>
            <subtitle><![CDATA[{{VAL(year)}}]]></subtitle>
          </lockup>
          }}
          {{IF(!{{VAL(viewOffset)}})}}{{
          <lockup onSelect="Presenter.load('Movie_PrePlay', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
            onPlay="videoPlayer.play('{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
            onHoldSelect="Presenter.loadContext('Movie_MorePopUp', '{{PMSID()}}', '{{VAL(ratingKey)}}')">
            <img src="{{IMAGE_T(thumb::360)}}" height="375" width="250" />
            {{IF(!{{VAL(viewCount)}})}}{{
            <overlay>
              <img style="tv-position: top-right; margin: -36 -30 120 120" src="{{RESOURCEURL(TVMLTemplates/Revenant/images/flags:unwatched:png)}}"  width="72" height="72" />
            </overlay>
            }}
            <title class="showTextOnHighlight"><![CDATA[{{VAL(title)}}]]></title>
            <subtitle><![CDATA[{{VAL(year)}}]]></subtitle>
            <subtitle><![CDATA[{{PMSVAL(name)}}]]></subtitle>  <!-- add local/remote, remove servername if only one -->
          </lockup>
          }}
          }}
          }}
        </section>
        }}
        }}
        }}
      </shelf>
      }}

      <!-- shows -->
      {{CUT({{GET(noShows)}})}}{{
      {{SET(noShows:true)}}
      <shelf class="spacing">
        <header>
          <title>{{TEXT(Shows)}}</title>
        </header>
        {{PMSLOOP(all)}}{{
        {{XML()}}{{
        {{SET(noItems:true)}}
        {{CUT({{GET(noItems)}})}}{{
        <section>
          <header>
          </header>
          {{COPY(MediaContainer/Directory)}}{{
          {{IF({{CHK("{{VAL(type:)}}"=="show")}})}}{{
          {{SET(noShows:false)}}
          {{SET(noItems:false)}}
          <lockup onSelect="Presenter.load('TVShow_SeasonList', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
            onPlay="videoPlayer.play('{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
            onHoldSelect="Presenter.loadContext('Movie_MorePopUp', '{{PMSID()}}', '{{VAL(ratingKey)}}')">
            <img src="{{IMAGE_T(thumb::360)}}" height="375" width="250" />
            {{IF(!{{CHK("{{VAL(leafCount)}}"="{{VAL(viewedLeafCount)}}")}})}}{{
            <overlay>
              <img style="tv-position: top-right; margin: -36 -30 120 120" src="{{RESOURCEURL(TVMLTemplates/Revenant/images/flags:unwatched:png)}}"  width="72" height="72" />
              <decorationLabel class="count">{{EVAL({{VAL(leafCount)}}-{{VAL(viewedLeafCount)}})}}</decorationLabel>
            </overlay>
            }}
            <title><![CDATA[{{VAL(title)}}]]></title>
            <subtitle><![CDATA[{{PMSVAL(name)}}]]></subtitle>  <!-- add local/remote, remove servername if only one -->
          </lockup>
          }}
          }}
        </section>
        }}
        }}
        }}
      </shelf>
      }}

      <!-- episodes -->
      {{CUT({{GET(noEpisodes)}})}}{{
      {{SET(noEpisodes:true)}}
      <shelf class="spacing">
        <header>
          <title>{{TEXT(Episodes)}}</title>
        </header>
        {{PMSLOOP(all)}}{{
        {{XML()}}{{
        {{SET(noItems:true)}}
        {{CUT({{GET(noItems)}})}}{{
        <section>
          <header>
          </header>
          {{COPY(MediaContainer/Video)}}{{
          {{IF({{CHK("{{VAL(type:)}}"=="episode")}})}}{{
          {{SET(noEpisodes:false)}}
          {{SET(noItems:false)}}
          <lockup onSelect="Presenter.load('TVShow_PrePlay', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
            onHoldSelect="Presenter.loadContext('TVShow_MorePopUp', '{{PMSID()}}', '{{VAL(ratingKey)}}')"
            {{IF(!{{VAL(viewOffset)}})}}{{
            onPlay="videoPlayer.play('{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
            }}
            {{IF({{VAL(viewOffset)}})}}{{
            onPlay="Presenter.loadContext('Videos_ResumePopUp', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
            }}
            >
            <img src="{{IMAGE_T(grandparentThumb::360)}}" height="375" width="250" />
            <overlay>
              {{IF({{VAL(viewOffset)}})}}{{
              <img style="tv-position: top-right; margin: -36 -30 120 120" src="{{RESOURCEURL(TVMLTemplates/Revenant/images/flags:watching:png)}}"  width="72" height="72" />
              }}
              {{IF(!{{VAL(viewOffset)}})}}{{
              {{IF(!{{VAL(viewCount)}})}}{{
              <img style="tv-position: top-right; margin: -36 -30 120 120" src="{{RESOURCEURL(TVMLTemplates/Revenant/images/flags:unwatched:png)}}"  width="72" height="72" />
            	}}
            	}}
            </overlay>
            <title><![CDATA[{{VAL(title)}}]]></title>
            <subtitle>{{TEXT(S)}}{{VAL(parentIndex)}} â€¢ {{TEXT(E)}}{{VAL(index)}}</subtitle>
             <subtitle><![CDATA[{{PMSVAL(name)}}]]></subtitle>  <!-- add local/remote, remove servername if only one -->
          </lockup>
          }}
          }}
        </section>
        }}
        }}
        }}
      </shelf>
      }}

      <!-- albums -->
      {{CUT({{GET(noAlbums)}})}}{{
      {{SET(noAlbums:true)}}
      <shelf class="spacing">
        <header>
          <title>{{TEXT(Albums)}}</title>
        </header>
        {{PMSLOOP(all)}}{{
        {{XML()}}{{
        {{SET(noItems:true)}}
        {{CUT({{GET(noItems)}})}}{{
        <section>
          <header>
          </header>
          {{COPY(MediaContainer/Directory)}}{{
          {{IF({{CHK("{{VAL(type:)}}"=="album")}})}}{{
          {{SET(noAlbums:false)}}
          {{SET(noItems:false)}}
          <lockup
            onSelect="Presenter.load('Music_Album', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
            onSelectHold="modal"
            >
            <img src="{{IMAGE_T(thumb::384)}}" width="308" height="308" />
            <title><![CDATA[{{VAL(title)}}]]></title>
            <subtitle><![CDATA[{{VAL(parentTitle)}}]]></subtitle>
            <subtitle><![CDATA[{{PMSVAL(name)}}]]></subtitle>  <!-- add local/remote, remove servername if only one -->
          </lockup>
          }}
          }}
        </section>
        }}
        }}
        }}
      </shelf>
      }}

      <!-- artists -->
      {{CUT({{GET(noArtists)}})}}{{
      {{SET(noArtists:true)}}
      <shelf class="spacing">
        <header>
          <title>{{TEXT(Artists)}}</title>
        </header>
        {{PMSLOOP(all)}}{{
        {{XML()}}{{
        {{SET(noItems:true)}}
        {{CUT({{GET(noItems)}})}}{{
        <section>
          <header>
          </header>
          {{COPY(MediaContainer/Directory)}}{{
          {{IF({{CHK("{{VAL(type:)}}"=="artist")}})}}{{
          {{SET(noArtists:false)}}
          {{SET(noItems:false)}}
          <lockup
            onSelect="Presenter.load('Music_Artist', '{{PMSID()}}', '{{PATH(/library/metadata/{{VAL(ratingKey)}})}}')"
            onSelectHold="modal"
            >
            <img class="rounded" src="{{IMAGE_T(thumb::384)}}" width="308" height="308" />
            <title><![CDATA[{{VAL(title)}}]]></title>
            <subtitle><![CDATA[{{PMSVAL(name)}}]]></subtitle>  <!-- add local/remote, remove servername if only one -->
          </lockup>
          }}
          }}
        </section>
        }}
        }}
        }}
      </shelf>
      }}

    </collectionList>
  </searchTemplate>
</document>
