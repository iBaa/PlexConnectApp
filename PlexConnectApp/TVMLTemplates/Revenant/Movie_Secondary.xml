{{XML()}}
{{
<document>
    <head>
        <style>
            .lightBackgroundColor {
            background-color: #b2b2b2;
            }
            .layout {
            margin: 40;
            }
            .showTextOnHighlight {
            tv-text-highlight-style: show-on-highlight;
            }
            .roundedImageCorners {
            itml-img-treatment: corner-small;
            }
        </style>
    </head>
    <catalogTemplate theme="light" class="lightBackgroundColor">
        <banner>
            <title><![CDATA[{{VAL(MediaContainer/title1)}}]]></title>
        </banner>
        <list>
            <section>
                <header>
                    <title><![CDATA[{{VAL(MediaContainer/title2)}}]]></title>
                </header>

    {{COPY(MediaContainer/Directory)}}{{
				<listItemLockup>
                    <title><![CDATA[{{VAL(title)}}]]></title>

                   {{XML({{VAL(key)}})}}{{
                   <decorationLabel><![CDATA[{{VAL(MediaContainer/size)}}]]></decorationLabel>
    			    <relatedContent>
                        <grid>
                            <section>
                              {{COPY(MediaContainer/Video)}}{{
                                <lockup onSelect="Presenter.load('Movie_PrePlay', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
                onPlay="videoPlayer.play('{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
                onSelectHold="ScrobbleMenu">
                                    <img src="{{IMAGEURL(thumb::360)}}" height="360" width="240" />
                                    <title class="whiteText"><![CDATA[{{VAL(title)}}]]></title>
                                </lockup>
           					  }}
                            </section>
                        </grid>
                    </relatedContent>
                    }}
                </listItemLockup>
    }}

            </section>
        </list>
    </catalogTemplate>
</document>
}}
