<?xml version="1.0" encoding="UTF-8" ?>
{{XML()}}{{
<document>
  <head>
    <style>
      .lightBackgroundColor {
      background-color: rgb(239, 236, 230);
      }
      .darkBackgroundColor {
      background-color: rgb(51, 51, 51);
      }
      .layout {
      margin: 40;
      }
      .showTextOnHighlight {
      tv-text-highlight-style: marquee-and-show-on-highlight;
      }
      .roundedImageCorners {
      itml-img-treatment: corner-small;
      }
    </style>
  </head>
  <catalogTemplate theme="light" class="lightBackgroundColor">
    <banner>
      <title><![CDATA[{{VAL(MediaContainer/title1)}}]]></title>
    </banner>
    <list>
      <section>
        <header>
          <title><![CDATA[{{VAL(MediaContainer/title2)}}]]></title>
        </header>
        {{COPY(MediaContainer/Directory)}}{{
        <listItemLockup>
          <title><![CDATA[{{VAL(title)}}]]></title>
          {{XML({{VAL(key)}})}}{{
          <decorationLabel><![CDATA[{{VAL(MediaContainer/size)}}]]></decorationLabel>
          <relatedContent>
            <grid>
              <section>
                {{COPY(MediaContainer/Video)}}{{
                {{IF({{VAL(viewOffset)}})}}{{
                <lockup onSelect="Presenter.load('Movie_PrePlay', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
                  onPlay="Presenter.loadContext('Videos_ResumePopUp', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
                  onHoldSelect="Presenter.loadContext('Movie_MorePopUp', '{{PMSID()}}', '{{VAL(ratingKey)}}')">
                  <img src="{{IMAGE_T(thumb::360)}}" height="375" width="250" />
                  <overlay>
										<img style="tv-position: top-right; margin: 0 0 120 120" src="{{RESOURCEURL(TVMLTemplates/Revenant/images/flags:watching:png)}}"  width="72" height="72" />
									</overlay>
                  <title class="showTextOnHighlight"><![CDATA[{{VAL(title)}}]]></title>
                </lockup>
                }}
                {{IF(!{{VAL(viewOffset)}})}}{{
                <lockup onSelect="Presenter.load('Movie_PrePlay', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
                  onPlay="videoPlayer.play('{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
                  onHoldSelect="Presenter.loadContext('Movie_MorePopUp', '{{PMSID()}}', '{{VAL(ratingKey)}}')">
                  <img src="{{IMAGE_T(thumb::360)}}" height="375" width="250" />
                  {{IF(!{{VAL(viewCount)}})}}{{
									<overlay>
										<img style="tv-position: top-right; margin: 0 0 120 120" src="{{RESOURCEURL(TVMLTemplates/Revenant/images/flags:unwatched:png)}}"  width="72" height="72" />
									</overlay>
									}}
                  <title class="showTextOnHighlight"><![CDATA[{{VAL(title)}}]]></title>
                </lockup>
                }}
                }}
              </section>
            </grid>
          </relatedContent>
          }}
        </listItemLockup>
        }}

      </section>
    </list>
  </catalogTemplate>
</document>
}}
