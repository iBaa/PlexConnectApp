{{CUT({{GET(noItems)}})}}{{
{{SET(noItems:true)}}
{{XML()}}{{
<document>
  <head>
        <style>
            .lightBackgroundColor {
            background-color: #b2b2b2;
            }
            .showTextOnHighlight {
            tv-text-highlight-style: show-on-highlight;
            }
            .roundedImageCorners {
            itml-img-treatment: corner-medium;
            }
            .button {
    	    tv-align: right;
    	    margin: 10;
      		}
      		.buttonText {
        	tv-text-style: subtitle1
      		}
    </style>
  </head>
  <stackTemplate theme="light">
    <banner>
      <title><![CDATA[{{VAL(MediaContainer/title1)}}]]> - <![CDATA[{{VAL(MediaContainer/title2)}}]]></title>
    </banner>
    <collectionList>

      <!-- directories: shelf -->
{{CUT({{GET(noDirs)}})}}{{
{{SET(noDirs:true)}}
      <shelf>
        <header>
          <title>{{TEXT(Folder)}}</title>
        </header>
        <section>
{{COPY(MediaContainer/Directory)}}{{
{{SET(noItems:false)}}
{{SET(noDirs:false)}}
          <lockup
              onSelect="Presenter.load('Photo_Browser', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
              onSelectHold="modal"
              >
            <img class="roundedImageCorners" src="{{IMAGEURL(thumb::360)}}" width="350" height="350" />
            <title><![CDATA[{{VAL(title)}}]]></title>
            <relatedContent>
              <lockup>
              <!--folder image -->
              </lockup>
            </relatedContent>
          </lockup>
}}
        </section>
      </shelf>
}}

      <!-- photos: grid -->
{{CUT({{GET(noPhotos)}})}}{{
{{SET(noPhotos:true)}}
      <separator>
        <button class="button"
            onSelect="photoPresenter.slideshow('{{PMSID()}}', '{{PATH()}}')"
            >
          <title class="buttonText">{{TEXT(Slideshow)}}</title>
        </button>
      </separator>
      <grid>
        <section>
{{COPY(MediaContainer/Photo)}}{{
{{SET(noItems:false)}}
{{SET(noPhotos:false)}}
        <lockup
            onSelect="photoPresenter.show('{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
            onSelectHold="modal"
            >
          <img src="{{PHOTOURL(thumb::360)}}" width="350" height="350" />
          <title class="showTextOnHighlight"><![CDATA[{{VAL(title)}}]]></title>
        </lockup>
}}
      </section>
      </grid>
}}

    </collectionList>
  </stackTemplate>
</document>
}}
}}

{{IF({{GET(noItems)}})}}{{  <!--enable if no items added-->
<document>
  <alertTemplate>
    <title>PlexConnect</title>
    <description>{{TEXT(Plex Media Server: No Items Available)}}</description>
  </alertTemplate>
</document>
}}
