<document>
  <searchTemplate onLoad="Search.onLoad(event)">
    <!-- search -->
    <searchField
        view="Search"
        pmsId="{{PMSID()}}"
        pmsPath="{{PATH()}}={0}"/>
    <!-- results -->
    <collectionList id="searchResults">
{{XML()}}{{
      <!-- movies -->
{{CUT({{GET(noMovies)}})}}{{
{{SET(noMovies:true)}}
      <shelf>
        <header>
          <title>{{TEXT(Movies)}}</title>
        </header>
        <section>
{{COPY(MediaContainer/Video)}}{{
{{IF({{CHK("{{VAL(type:)}}"=="movie")}})}}{{
{{SET(noMovies:false)}}
          <lockup
              onSelect="Presenter.load('Movie_PrePlay', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
              onPlay="videoPlayer.play('{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
              onSelectHold="ScrobbleMenu"
              >
            <img src="{{IMAGEURL(thumb::384)}}" width="200" height="300" />
            <overlay>
              {{IF({{VAL(viewOffset)}})}}{{
              <img style="tv-position: top-right; margin: -36 -30 120 120" src="{{RESOURCEURL(TVMLTemplates/Revenant/images/flags:watching:png)}}"  width="72" height="72" />
              }}
              {{IF(!{{VAL(viewOffset)}})}}{{
              {{IF(!{{VAL(viewCount)}})}}{{
              <img style="tv-position: top-right; margin: -36 -30 120 120" src="{{RESOURCEURL(TVMLTemplates/Revenant/images/flags:unwatched:png)}}"  width="72" height="72" />
            	}}
            	}}
            </overlay>
            <title><![CDATA[{{VAL(title)}}]]></title>
          </lockup>
}}
}}
        </section>
      </shelf>
}}

      <!-- shows -->
{{CUT({{GET(noShows)}})}}{{
{{SET(noShows:true)}}
      <shelf>
        <header>
          <title>{{TEXT(Shows)}}</title>
        </header>
        <section>
{{COPY(MediaContainer/Directory)}}{{
{{IF({{CHK("{{VAL(type:)}}"=="show")}})}}{{
{{SET(noShows:false)}}
          <lockup
              onSelect="Presenter.load('TVShow_SeasonList', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
              onSelectHold="ScrobbleMenu"
              >
            <img src="{{IMAGEURL(thumb::384)}}" width="200" height="300" />
            <overlay>
              {{IF({{VAL(viewOffset)}})}}{{
              <img style="tv-position: top-right; margin: -36 -30 120 120" src="{{RESOURCEURL(TVMLTemplates/Revenant/images/flags:watching:png)}}"  width="72" height="72" />
              }}
              {{IF(!{{VAL(viewOffset)}})}}{{
              {{IF(!{{VAL(viewCount)}})}}{{
              <img style="tv-position: top-right; margin: -36 -30 120 120" src="{{RESOURCEURL(TVMLTemplates/Revenant/images/flags:unwatched:png)}}"  width="72" height="72" />
            	}}
            	}}
            </overlay>
            <title><![CDATA[{{VAL(title)}}]]></title>
          </lockup>
}}
}}
        </section>
      </shelf>
}}

      <!-- episodes -->
{{CUT({{GET(noEpisodes)}})}}{{
{{SET(noEpisodes:true)}}
      <shelf>
        <header>
          <title>{{TEXT(Episodes)}}</title>
        </header>
        <section>
{{COPY(MediaContainer/Video)}}{{
{{IF({{CHK("{{VAL(type:)}}"=="episode")}})}}{{
{{SET(noEpisodes:false)}}
          <lockup
              onSelect="Presenter.load('TVShow_PrePlay', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
              onPlay="videoPlayer.play('{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
              onHoldSelect="Presenter.loadContext('TVShow_EpisodeContext', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
              >
            <img src="{{IMAGEURL(thumb::384)}}" width="300" height="200" />
            <overlay>
              {{IF({{VAL(viewOffset)}})}}{{
              <img style="tv-position: top-right; margin: -36 -30 120 120" src="{{RESOURCEURL(TVMLTemplates/Revenant/images/flags:watching:png)}}"  width="72" height="72" />
              }}
              {{IF(!{{VAL(viewOffset)}})}}{{
              {{IF(!{{VAL(viewCount)}})}}{{
              <img style="tv-position: top-right; margin: -36 -30 120 120" src="{{RESOURCEURL(TVMLTemplates/Revenant/images/flags:unwatched:png)}}"  width="72" height="72" />
            	}}
            	}}
            </overlay>
            <title><![CDATA[{{VAL(title)}}]]></title>
            <subtitle><![CDATA[{{VAL(grandparentTitle)}}]]></subtitle>
            <subtitle>{{TEXT(S)}}{{VAL(parentIndex)}} • {{TEXT(E)}}{{VAL(index)}}</subtitle>
          </lockup>
}}
}}
        </section>
      </shelf>
}}

      <!-- albums -->
{{CUT({{GET(noAlbums)}})}}{{
{{SET(noAlbums:true)}}
      <shelf>
        <header>
          <title>{{TEXT(Albums)}}</title>
        </header>
        <section>
{{COPY(MediaContainer/Directory)}}{{
{{IF({{CHK("{{VAL(type:)}}"=="album")}})}}{{
{{SET(noAlbums:false)}}
          <lockup
              onSelect="Presenter.load('Music_Album', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
              onSelectHold="modal"
              >
            <img src="{{IMAGEURL(thumb::384)}}" width="250" height="250" />
            <title><![CDATA[{{VAL(title)}}]]></title>
            <subtitle><![CDATA[{{VAL(parentTitle)}}]]></subtitle>
          </lockup>
}}
}}
        </section>
      </shelf>
}}

      <!-- artists -->
{{CUT({{GET(noArtists)}})}}{{
{{SET(noArtists:true)}}
      <shelf>
        <header>
          <title>{{TEXT(Artists)}}</title>
        </header>
        <section>
{{COPY(MediaContainer/Directory)}}{{
{{IF({{CHK("{{VAL(type:)}}"=="artist")}})}}{{
{{SET(noArtists:false)}}
          <lockup
              onSelect="Presenter.load('Music_Artist', '{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
              onSelectHold="modal"
              >
            <img src="{{IMAGEURL(thumb::384)}}" width="250" height="250" />
            <title><![CDATA[{{VAL(title)}}]]></title>
          </lockup>
}}
}}
        </section>
      </shelf>
}}

      <!-- tracks -->
{{CUT({{GET(noTracks)}})}}{{
{{SET(noTracks:true)}}
      <shelf>
        <header>
          <title>{{TEXT(Tracks)}}</title>
        </header>
        <section>
{{COPY(MediaContainer/Track)}}{{
{{IF({{CHK("{{VAL(type:)}}"=="track")}})}}{{
{{SET(noTracks:false)}}
          <lockup
              onSelect="audioPlayer.play('{{PMSID()}}', '{{PATH({{VAL(key)}})}}')"
              onSelectHold="modal"
              >
            <img src="{{IMAGEURL(thumb::384)}}" width="250" height="250" />
            <title><![CDATA[{{VAL(title)}}]]></title>
          </lockup>
}}
}}
        </section>
      </shelf>
}}

}}
   </collectionList>
  </searchTemplate>
</document>
