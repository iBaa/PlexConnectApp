{{CUT({{GET(noItems)}})}}{{
{{SET(noItems:true)}}
{{PMS(plex.tv)}}{{
{{XML(/api/home/users)}}{{
<document>
    <head>
        <style>
            .darkBackgroundColor {
            background-color: #1f1f1f;
            }
        </style>
    </head>
  <listTemplate>
    <list>

      <header>
        <title>{{TEXT(Plex Home Users)}}</title>
      </header>

      <section>
{{COPY(MediaContainer/User)}}{{
{{SET(noItems:false)}}
        <listItemLockup
            {{IF({{CHK("{{USRVAL(name)}}"=="{{VAL(title)}}")}})}}{{ autoHighlight="true" }}
            id="{{VAL(id)}}"
            username="{{VAL(title)}}"
            protected="{{VAL(protected)}}"
            onSelect="myPlex.switchHomeUser(event);"
            onSuccess="navigationDocument.popDocument();  // remove this page"
            onError="Presenter.load('MyPlex_SignInFailed','','');"
            >
          <row autoHighlight="true">
            <title><![CDATA[{{VAL(title)}}]]></title>
{{IF({{VAL(admin)}})}}{{
            <decorationImage src="{{RESOURCEURL(Images:icon_key:png)}}" width="27" height="26" />
}}
{{IF({{VAL(protected)}})}}{{
            <decorationImage src="{{RESOURCEURL(Images:icon_lock:png)}}" width="19" height="23" />
}}
{{IF({{CHK("{{USRVAL(name)}}"=="{{VAL(title)}}")}})}}{{
            <decorationImage src="resource://button-checkmark" />
}}
          </row>
          <relatedContent>
            <lockup>
              <img style="tv-img-treatment: circle;" src="{{VAL(thumb)}}?size=100" width="100" height="100" />
              <title style="text-align: center;"><![CDATA[{{VAL(title)}}]]></title>
              <description style="text-align: center;"><![CDATA[{{VAL(email)}}]]></description>
            </lockup>
          </relatedContent>
        </listItemLockup>
}}
      </section>

    </list>
  </listTemplate>
</document>
}}
}}
}}

{{IF({{GET(noItems)}})}}{{  <!--enable if no items added-->
<document>
  <alertTemplate>
    <title>PlexConnect</title>
    <description>{{TEXT(Plex Media Server: No Items Available)}}</description>
  </alertTemplate>
</document>
}}
