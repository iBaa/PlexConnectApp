<?xml version="1.0" encoding="UTF-8" ?>
{{XML()}}{{
<document>
  <head>
      <style>
        .lightBackgroundColor {
        background-color: rgb(239, 236, 230);
        }
        .darkBackgroundColor {
        background-color: rgb(51, 51, 51);
        }
      </style>
  </head>
  <alertTemplate theme="dark" class="darkBackgroundColor">
    <title><![CDATA[{{VAL(MediaContainer/Video/title)}}]]></title>
    <description><![CDATA[{{VAL(MediaContainer/Video/grandparentTitle)}}]]></description>
			<button onSelect="swiftInterface.sendPmsPath('{{PMSID()}}', '/:/scrobble?key={{VAL(MediaContainer/Video/ratingKey)}}&amp;identifier=com.plexapp.plugins.library'); Presenter.closeContext(); Presenter.loadAndSwap('Library_EpisodeContext', '{{PMSID()}}', '{{PATH()}}');">
       	<text>{{TEXT(Mark as Watched)}}</text>
      </button>
      <button onSelect="swiftInterface.sendPmsPath('{{PMSID()}}', '/:/unscrobble?key={{VAL(MediaContainer/Video/ratingKey)}}&amp;identifier=com.plexapp.plugins.library'); Presenter.closeContext(); Presenter.loadAndSwap('Library_EpisodeContext', '{{PMSID()}}', '{{PATH()}}');">
       	<text>{{TEXT(Mark as Unwatched)}}</text>
      </button>
    </alertTemplate>
</document>
}}
