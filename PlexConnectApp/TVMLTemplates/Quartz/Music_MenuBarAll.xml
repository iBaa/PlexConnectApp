<?xml version="1.0" encoding="UTF-8" ?>
<document>
  <menuBarTemplate>
    <menuBar>
      <menuItem id="Title"
          autoHighlight="true"
          onSelect="Presenter.loadMenuContent('Music_Grid', '{{PMSID()}}', '{{PATH()}}')">
        <title>{{TEXT(By Name)}}</title>
      </menuItem>

      <menuItem id="Duration"
          onSelect="Presenter.loadMenuContent('Music_Grid', '{{PMSID()}}', '{{PATH()}}?sort=viewCount%3Adesc')">
        <title>{{TEXT(Most Played)}}</title>
      </menuItem>
    
      <menuItem id="Year"
          onSelect="Presenter.loadMenuContent('Music_Grid', '{{PMSID()}}', '{{PATH()}}?sort=lastViewedAt%3Adesc')">
        <title>{{TEXT(Last Viewed)}}</title>
      </menuItem>
    </menuBar>
  </menuBarTemplate>
</document>
